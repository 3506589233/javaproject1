class Employee{
    private String name;
    private int birthMonth;
    Employee(){}
    Employee(String name,int birthMonth){
        this.name = name;
        this.birthMonth = birthMonth;
    }
    int getSalary(int month) {
        if (month == birthMonth) return 100;
        else return 0;
    }
    String getName(){
        return name;
    }
}

class SalariedEmployee extends Employee{
    private int monthSalary;
    SalariedEmployee(String name,int birthMonth,int monthSalary){
        super(name,birthMonth);
        this.monthSalary = monthSalary;
    }
    void setMonthSalary(int monthSalary){
        this.monthSalary = monthSalary;
    }
    int getSalary(int month){
        return super.getSalary(month) + monthSalary;
    }
}

class HourlyEmployee extends Employee{
    private int hourSalary,workHour;
    HourlyEmployee(String name, int birthMonth,int hourSalary,int workHour){
        super(name,birthMonth);
        this.workHour = workHour;
        this.hourSalary = hourSalary;
    }
    void set(int hourSalary,int workHour){
        this.hourSalary = hourSalary;
        this.workHour = workHour;
    }
    int getSalary(int month){
        int salary = Math.min(workHour,160)*hourSalary;
        if(workHour>160) salary += (workHour-160)*hourSalary*1.5;
        return salary + super.getSalary(month);
    }
}

class SalesEmployee extends Employee{
    private int monthSale;
    private float rate;
    SalesEmployee(String name, int birthMonth,int monthSale,float rate){
        super(name,birthMonth);
        this.rate = rate;
        this.monthSale = monthSale;
    }
    void set(int monthSale,int rate){
        this.monthSale = monthSale;
        this.rate = rate;
    }
    int getSalary(int month){
        return Math.round(monthSale*rate) + super.getSalary(month);
    }
}

class BasePlusSalesEmployee extends SalesEmployee{
    private int baseSalary;
    BasePlusSalesEmployee(String name,int birthmonth,int monthSale,float rate,int baseSalary){
        super(name,birthmonth,monthSale,rate);
        this.baseSalary = baseSalary;
    }
    void setBaseSalary(int baseSalary) {
        this.baseSalary = baseSalary;
    }
    int getSalary(int month){
        return super.getSalary(month) + baseSalary;
    }
}

public class Test{
    public static void main(String[] args){
        Employee[] employees = new Employee[] {
                new SalariedEmployee("张三", 3, 5000),
                new HourlyEmployee("李四", 6, 50, 180),
                new SalesEmployee("王五", 9, 10000, 0.1f),
                new BasePlusSalesEmployee("赵六", 12, 8000, 0.15f, 3000)
        };
        for(Employee employee : employees){
            if(employee instanceof SalariedEmployee){
                System.out.print("这是月薪工:");
            }else if(employee instanceof HourlyEmployee){
                System.out.print("这是小时工:");
            }else if(employee instanceof BasePlusSalesEmployee){
                System.out.print("这是底薪销售员:");
            }else{
                System.out.print("这是销售员:");
            }
            System.out.println(employee.getName());
            System.out.printf("本月应发给%s工资:%d元%n",employee.getName(),employee.getSalary(6));
        }
    }
}